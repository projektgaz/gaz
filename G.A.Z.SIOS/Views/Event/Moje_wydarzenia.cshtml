@model G.A.Z.SIOS.Models.Objekty
@{
    ViewBag.Title = "Moje_wydarzenia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h3>TWOJE WYDARZENIA</h3><hr />
<div class="row">
    @Html.ActionLink("Jeśli chcesz dodać wydarzenie kliknij tutaj!", "Dodaj_wydarzenie", "Home", null, new { @class = "btn btn-default" })
    <br /><br />
    @if (Model.Wydarzenie.Where(c => c.ID_organizator == User.Identity.Name).Count() > 0)
    {
        foreach (var item in Model.Wydarzenie.Where(c => c.ID_organizator == User.Identity.Name))
        {
            var miesiac = "";
            var minuta = "";
            if (item.Data.Month < 10) { miesiac = "0" + item.Data.Month; } else { miesiac += item.Data.Month; }
            if (item.Data.Minute < 10) { minuta = "0" + item.Data.Minute; } else { minuta += item.Data.Minute; }

            <table class="table table-striped table-hover ">
                <thead>
                    <tr>
                        <th></th>
                        <th>@Html.DisplayFor(modelItem => item.Nazwa)</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="active">
                        <td>Miejsce: </td>
                        <td>@Html.DisplayFor(modelItem => item.Miejsce)</td>
                    </tr>
                    <tr class="active">
                        <td>Data: </td>
                        <td>@Html.DisplayFor(modelItem => item.Data.Day).@miesiac.@Html.DisplayFor(modelItem => item.Data.Year)</td>
                    </tr>
                    <tr class="active">
                        <td>Godzina: </td>
                        <td>@Html.DisplayFor(modelItem => item.Data.Hour):@minuta</td>
                    </tr>
                    <tr class="bg-primary">
                        <td>Cena: </td>
                        <td>@Html.DisplayFor(modelItem => item.Cena_wejsciowki)zł</td>
                    </tr>
                    <tr class="active">
                        <td>Rodzaj: </td>
                        <td>@Html.DisplayFor(modelItem => item.Rodzaj)</td>
                    </tr>
                    <tr class="active">
                        <td>Opis: </td>
                        <td>@Html.DisplayFor(modelItem => item.Opis)</td>
                    </tr>
                    <tr class="success">
                        <td>Bierze udział: </td>
                        <td>@Html.DisplayFor(modelItem => item.Udzial_count)</td>
                    </tr>
                    <tr class="success">
                        <td>Zainteresowani: </td>
                        <td>@Html.DisplayFor(modelItem => item.Zainteresowani_count)</td>
                    </tr>
                    <tr>
                        <td></td>
                        <bold>
                            <big>
                                <td class=" btn-group btn-group-justified">
                                    @Html.ActionLink(" Edytuj Wydarzenie", "EventEdit", "Event", new { event_id = item.ID }, new { @class = "btn btn-default" })
                                    @Html.ActionLink("Marketing", "EventMarketing", "Event", new { event_id = item.ID }, new { @class = "btn btn-default" })
                                    @Html.ActionLink("Usuń Wydarzenie", "EventDelete", "Event", new { event_id = item.ID }, new { onclick = "return confirm('Czy na pewno chcesz usunąć wydarzenie?');", @class = "btn btn-default" })
                                </td>
                            </big>
                        </bold>
                    </tr>
                </tbody>
            </table>
        }
    }
    else
    { <h4>Obecnie nie posiadasz żadnych wydarzeń.</h4>}
</div>

